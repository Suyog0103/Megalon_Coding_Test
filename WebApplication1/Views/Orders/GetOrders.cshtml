@{
}



@model List<Megalon.Models.Order>

<h2>Orders</h2>

@if (Model.Count == 0)
{
    <p>No orders available for this customer.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Item Name</th>
                <th>Item Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderID</td>
                    <td>@order.ItemName</td>
                    <td>@order.ItemPrice</td>
                </tr>
            }
        </tbody>
    </table>
}
